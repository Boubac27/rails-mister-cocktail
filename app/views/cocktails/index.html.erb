<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <div class="card" style="background-image: url("https://www.google.com/url?sa=i&rct=j&q=&esrc=s&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwi8_6zK5NbeAhUQmRoKHU7TD-AQjRx6BAgBEAU&url=http%3A%2F%2Fwww.domainehudson.com%2Fcocktails%2F&psig=AOvVaw2wQSd08OBzffSVSvo9MggZ&ust=1542384511987714");">
          <h2><%= cocktail.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

